<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@drawable/mycenter_item_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_center_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/tv_center_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/light_gray_7a"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_invite_surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="0.5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_mycenter_surprise"
        android:visibility="gone"/>
</RelativeLayout>

