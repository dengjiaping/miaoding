<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="267dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="1dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_goods"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="208dp"
               android:orientation="horizontal"
               android:layout_marginTop="3.5dp">
               <View
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
               <com.facebook.drawee.view.SimpleDraweeView
                   android:id="@+id/img_sub_goods"
                   android:layout_width="0dp"
                   android:layout_height="208dp"
                   android:layout_weight="44"
                   android:scaleType="centerInside"
                   app:roundedCornerRadius="3dp"/>
               <View
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.963"/>
           </LinearLayout>
        <!--<com.makeramen.roundedimageview.RoundedImageView-->
            <!--android:id="@+id/img_goods_custom"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="208dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--app:riv_corner_radius="3dp"-->
            <!--android:layout_marginLeft="4dp"-->
            <!--android:layout_marginRight="4dp"-->
            <!--android:layout_marginTop="3.5dp"/>-->

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/dark_gray_22"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/light_gray_80"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>
