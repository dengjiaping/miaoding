<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="267dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="1dp"
    android:background="@mipmap/bg_goods"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginTop="3.5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_sub_goods"
            android:layout_width="0dp"
            android:layout_height="208dp"
            android:layout_weight="44"
            android:scaleType="centerCrop"
            app:roundedCornerRadius="3dp"
            fresco:placeholderIamge="@mipmap/place_banner"
            fresco:placeholderImageScaleType="centerCrop"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.963"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/dark_gray_22"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_sub_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray_22"
            android:textSize="13sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sub_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/light_gray_80"
        android:textSize="10sp"/>
</LinearLayout>

