<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:fitsSystemWindows="true">

    <cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager
        android:id="@+id/vp_works_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </cn.cloudworkshop.miaoding.jazzyviewpager.JazzyViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_works_bg"/>

    <cn.cloudworkshop.miaoding.view.TyperTextView
        android:id="@+id/tv_content_goods"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@android:color/black"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_add_bag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_shopping_bag"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/img_buy_works"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/icon_shopping_bag"
            android:scaleType="fitCenter"/>


        <RadioGroup
            android:id="@+id/rgs_indicator_works"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

        </RadioGroup>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_goods_back"
        android:layout_width="44dp"
        android:layout_height="70dp"
        android:scaleType="center"
        android:src="@mipmap/icon_back_white"/>

    <ImageView
        android:id="@+id/img_goods_share"
        android:layout_width="44dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/icon_share_goods"/>
</RelativeLayout>